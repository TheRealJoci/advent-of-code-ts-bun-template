{
  "name": "advent24",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "lint": "eslint . --fix --quiet --cache --cache-strategy content",
    "typecheck": "tsc --noEmit",
    "scaffold": "bun ./bin/index.ts scaffold",
    "solve": "bun ./bin/index.ts solve"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix --quiet --cache --cache-strategy content"
    ],
    "**/*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
